<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".registromascota">

    <TextView
        android:text="Bienvenido"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Somos la veterinaria famiperro, estamos dispuestos a ayudar a todos los animales que se encunetren en problemas."
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/imagesp" />

    <Button
        android:id="@+id/btregistrarmascota"
        android:layout_marginTop="10dp"
        android:text="Registrar mascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btbuscar"
        android:layout_marginTop="10dp"
        android:text="Buscar Mascotas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btmostrardetalles"
        android:layout_marginTop="10dp"
        android:text="Detalle mascotas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>